{% comment %}
  Hero Section with animated shapes and stickers
{% endcomment %}

<section class="hero" id="hero-{{ section.id }}">
  {%- if section.settings.show_stickers -%}
    <div class="sticker sticker-1">{{ section.settings.sticker_1_text }}</div>
    <div class="sticker sticker-2">{{ section.settings.sticker_2_text }}</div>
    <div class="sticker sticker-3">{{ section.settings.sticker_3_text }}</div>
  {%- endif -%}
  
  <div class="container">
    <div class="hero-content">
      {%- if section.settings.heading != blank -%}
        <h1 class="hero__heading">{{ section.settings.heading }}</h1>
      {%- endif -%}
      
      {%- if section.settings.subheading != blank -%}
        <p class="hero__subheading">{{ section.settings.subheading }}</p>
      {%- endif -%}
      
      {%- if section.settings.button_label != blank -%}
        <a href="{{ section.settings.button_link }}" class="btn hero__button">
          {{ section.settings.button_label }}
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

<style>
  #hero-{{ section.id }} {
    background: {{ section.settings.background_color | default: settings.secondary_color }};
    padding: {{ section.settings.padding_top }}rem 0 {{ section.settings.padding_bottom }}rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  #hero-{{ section.id }}::before {
    content: '';
    position: absolute;
    top: 20%;
    left: 10%;
    width: 100px;
    height: 100px;
    background: var(--accent-gradient);
    border-radius: 50% 20% 50% 20%;
    opacity: 0.7;
    animation: morph 6s ease-in-out infinite;
  }

  #hero-{{ section.id }}::after {
    content: '';
    position: absolute;
    bottom: 20%;
    right: 15%;
    width: 80px;
    height: 80px;
    background: var(--primary-color);
    clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
    opacity: 0.8;
    animation: bounce 4s ease-in-out infinite;
  }

  .hero-content {
    position: relative;
    z-index: 10;
  }

  .hero__heading {
    font-size: {{ section.settings.heading_size }}rem;
    font-weight: 900;
    margin-bottom: 1rem;
    background: var(--accent-gradient);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    position: relative;
  }

  .hero__subheading {
    font-size: {{ section.settings.subheading_size }}rem;
    margin-bottom: 2rem;
    color: var(--text-dark);
    font-weight: 500;
  }

  .hero__button {
    font-size: {{ section.settings.button_size }}rem;
  }

  @media (max-width: 768px) {
    .hero__heading {
      font-size: calc({{ section.settings.heading_size }}rem * 0.7);
    }
    
    .hero__subheading {
      font-size: calc({{ section.settings.subheading_size }}rem * 0.9);
    }
  }
</style>

