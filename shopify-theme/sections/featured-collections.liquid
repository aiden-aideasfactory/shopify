{% comment %}
  Featured Collections Section
{% endcomment %}

<section class="collections-section" id="collections-{{ section.id }}">
  <div class="container">
    {%- if section.settings.heading != blank -%}
      <h2 class="section-title">{{ section.settings.heading }}</h2>
    {%- endif -%}
    
    {%- if section.settings.subheading != blank -%}
      <p class="section-subtitle">{{ section.settings.subheading }}</p>
    {%- endif -%}
    
    <div class="collections-grid">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'collection' -%}
            {%- assign collection = collections[block.settings.collection] -%}
            <div class="collection-block" {{ block.shopify_attributes }}>
              <a href="{{ collection.url | default: '#' }}" class="collection-block__link">
                <div class="collection-block__image">
                  {%- if collection.featured_image != blank -%}
                    {{ collection.featured_image | image_url: width: 600 | image_tag:
                      loading: 'lazy',
                      class: 'collection-block__image-img'
                    }}
                  {%- elsif collection.products.first.featured_image != blank -%}
                    {{ collection.products.first.featured_image | image_url: width: 600 | image_tag:
                      loading: 'lazy',
                      class: 'collection-block__image-img'
                    }}
                  {%- else -%}
                    <div class="collection-block__placeholder">
                      {{ block.settings.placeholder_text | default: collection.title }}
                    </div>
                  {%- endif -%}
                </div>
                <div class="collection-block__info">
                  <h3 class="collection-block__title">
                    {{ block.settings.title | default: collection.title }}
                  </h3>
                  <p class="collection-block__description">
                    {{ block.settings.description | default: collection.description | truncate: 100 }}
                  </p>
                  {%- if block.settings.button_label != blank -%}
                    <span class="btn collection-block__button">
                      {{ block.settings.button_label }}
                    </span>
                  {%- endif -%}
                </div>
              </a>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  #collections-{{ section.id }} {
    padding: {{ section.settings.padding_top }}rem 0 {{ section.settings.padding_bottom }}rem;
    background: {{ section.settings.background_color | default: 'white' }};
    position: relative;
  }

  .section-title {
    text-align: center;
    font-size: 3rem;
    font-weight: 900;
    margin-bottom: 1rem;
    color: var(--primary-color);
    position: relative;
  }

  .section-subtitle {
    text-align: center;
    font-size: 1.2rem;
    color: var(--text-light);
    margin-bottom: 4rem;
  }

  .collections-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.collections_per_row }}, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .collection-block__link {
    text-decoration: none;
    color: inherit;
    display: block;
    height: 100%;
  }

  .collection-block__image {
    height: 280px;
    background: var(--accent-gradient);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.8rem;
    font-weight: bold;
    position: relative;
    overflow: hidden;
  }

  .collection-block__image-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .collection-block__placeholder {
    color: white;
    font-size: 1.5rem;
    font-weight: bold;
    text-align: center;
    padding: 2rem;
  }

  .collection-block__button {
    margin-top: 1rem;
  }

  @media (max-width: 1024px) {
    .collections-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .collections-grid {
      grid-template-columns: 1fr;
    }
    
    .section-title {
      font-size: 2rem;
    }
  }
</style>

